{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES6"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
